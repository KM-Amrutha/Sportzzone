<head>
    <meta charset="utf-8">
    <title>Invoice</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/logo.png">
    <!-- Template CSS -->
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />


    <style>
        @media print {
    .hide-on-print {
        display: none !important;
    }
}
    </style>



</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index.html" class="brand-wrap">
                <img src="/assets/imgs/theme/logo.png" class="logo" alt="Evara Dashboard">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i> </button>
            </div>
        </div>
        
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
           
        </header>


        <section class="content-main">
            <div class="content-header">
                <div>
                    <%if(locals.invoice){%>
                        
                        <h1 class="content-title card-title">Invoice</h1>
                   <% } %>
                   
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="card">
                        <header class="card-header">
                            <div class="row align-items-center">
                                <%if(locals.invoice){%>
                                <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">


                                    <a href="#" class="brand-wrap">
                                        <img src="/assets/imgs/theme/logo.png" class="logo" alt="Evara Dashboard" style="width: 100px; height: auto;">
                                    </a><br><br>
                                   
                                    <small  class="text-muted">Order ID: <%=invoice.orderId%></small>
                                </div>
                                <% } %>
                               
                                <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                                    <% if(locals.invoice) { %>
                                        <a class="btn btn-primary download-button" href="#" id="print">
                                            <i class="icon material-icons md-cloud_download mr-5"></i>Download
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </header>
                        <%if(locals.invoice){%>

                      
                        <div class="card-body">
                            <div class="receipt-content">
                                <div class="container bootstrap snippets bootdey">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="invoice-wrapper">
                                                <div class="intro">
                                                    Hi <strong><%=invoice.userId.name%></strong>,
                                                    <br>
                                                   
                                                </div>
                    
                                                <div class="payment-info">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <span>Email :</span>
                                                            <strong><%=invoice.userId.email%></strong>
                                                        </div>
                                                        <div class="col-sm-6 text-end">
                                                            <span>Ordered On : </span>
                                                            <strong><%=invoice.orderDate.toLocaleString()%></strong><br>
                                                            <span>Payment : <%=invoice.paymentMethod%></span>
                                                        </div>
                                                    </div>
                                                </div>
                    
                                                <div class="payment-details">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <span>Ph :</span>
                                                            <strong>
                                                                 <%=invoice.address.mobile%>
                                                            </strong>
                                                            <p>
                                                                <%=invoice.address.address%> <br><%=invoice.address.city%> <br><%=invoice.address.state%> <br><%=invoice.address.zipcode%>
                                                               
                                                            </p>
                                                        </div>
                                                       
                                                    </div>
                                                </div>
                    
                                              
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th width="40%">Product</th>
                                                            <th width="20%">Unit Price</th>
                                                            <th width="20%">Quantity</th>
                                                            <th width="20%">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (locals.invoice) { %>
                                                            <% invoice.products.forEach((item) => { %>
                                                                <% console.log(item) %>
                                                                <tr>
                                                                    <td><%= item.productId.title %></td>
                                                                    <td>₹ <%= item.productId.salesprice %></td>
                                                                    <td><%= item.quantity %></td>
                                                                    <td class="highlight-amount">₹ <%= item.quantity * item.productId.salesprice %></td>
                                                                </tr>
                                                            <% }) %>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                    
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- card-body end// -->
                        <% } %>
                    </div> <!-- card end// -->
                </div>
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>


                        // document
                        //   .getElementById('print')
                        //   .addEventListener('click', function() {
                        //     window.print();
                        //   });



                        document.getElementById('print').addEventListener('click', function() {
    const downloadButton = document.querySelector('.download-button');
    if (downloadButton) {
        downloadButton.classList.add('hide-on-print');
    }
    window.print();
});



                      



                        </script>
                    <script>
                    document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/vendors/select2.min.js"></script>
    <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin-assets/js/main.js" type="text/javascript"></script>
</body>

</html>