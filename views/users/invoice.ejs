<%- include('../layouts/userHeader.ejs') -%>

    <main class="main-wrap">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/home" rel="nofollow">Home</a>
                    <span></span> userprofile
                    <span></span> invoice
                </div>
            </div>
        </div>
        <header class="main-header navbar">
           
        </header>


        <section class="content-main">
            <div class="content-header">
                <div>
                    <%if(locals.invoice){%>
                        
                        <h1 class="content-title card-title">Invoice</h1>
                   <% } %>
                   
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="card">
                        <header class="card-header">
                            <div class="row align-items-center">
                                <%if(locals.invoice){%>
                                <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">


                                    <a href="#" class="brand-wrap">
                                        <!-- <img src="/assets/imgs/theme/logo.png" class="logo" alt="Evara Dashboard" style="width: 100px; height: auto;"> -->
                                   SportZone
                                    </a><br><br>
                                   
                                    <small  class="text-muted">Order ID: <%=invoice.orderId%></small>
                                </div>
                                <% } %>
                               
                                <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                                    <% if(locals.invoice) { %>
                                        <a class="btn btn-primary download-button" href="#" id="print">
                                            <i class="icon material-icons md-cloud_download mr-5"></i>Download
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </header>
                        <%if(locals.invoice){%>

                      
                        <div class="card-body">
                            <div class="receipt-content">
                                <div class="container bootstrap snippets bootdey">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="invoice-wrapper">
                                                <div class="intro">
                                                    Hi <strong><%=invoice.userId.name%></strong>,
                                                    <br>
                                                   
                                                </div>
                    
                                                <div class="payment-info">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <span>Email :</span>
                                                            <strong><%=invoice.userId.email%></strong>
                                                        </div>
                                                        <div class="col-sm-6 text-end">
                                                            <span>Ordered On : </span>
                                                            <strong><%=invoice.orderDate.toLocaleString()%></strong><br>
                                                            <span>Payment : <%=invoice.paymentMethod%></span>
                                                        </div>
                                                    </div>
                                                </div>
                    
                                                <div class="payment-details">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <span>Ph :</span>
                                                            <strong>
                                                                 <%=address.mobile%>
                                                            </strong>
                                                            <p>
                                                                <%=address.houseName%> <br><%=address.city%> <br>
                                                                <%=address.state%> <br><%=address.pincode%>
                                                               
                                                            </p>
                                                        </div>
                                                       
                                                    </div>
                                                </div>
                    
                                              
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th width="40%">Product</th>
                                                            <th width="20%">Unit Price</th>
                                                            <th width="20%">Quantity</th>
                                                            <th width="20%">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (locals.invoice) { %>
                                                            <% invoice.product.forEach((item) => { %>
                                                                <% console.log(item) %>
                                                                <tr>
                                                                    <td><%= item.productId.productName %></td>
                                                                    <td>₹ <%= item.productId.productPrice %></td>
                                                                    <td><%= item.quantity %></td>
                                                                    <td class="highlight-amount">₹  <%= item.quantity * 
                                                                        (item.productId.offerPrice 
                                                                            ? item.productId.offerPrice 
                                                                            : item.productId.productPrice) %></td>
                                                                </tr>
                                                            <% }) %>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                    
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- card-body end// -->
                        <% } %>
                    </div> <!-- card end// -->
                </div>
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>


                        document.getElementById('print').addEventListener('click', function() {
    const downloadButton = document.querySelector('.download-button');
    if (downloadButton) {
        downloadButton.classList.add('hide-on-print');
    }
    window.print();
});

                        </script>
                    <script>
                    document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/vendors/select2.min.js"></script>
    <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin-assets/js/main.js" type="text/javascript"></script>
</body>

</html>