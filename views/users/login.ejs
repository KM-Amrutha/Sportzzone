<% include('../layouts/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background-image: url("/assets/imgs/page/back1.jpg");
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
    background-color:transparent;
    padding: 30px;
    border-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(4, 4, 0, 0.125);
    width: 100%;
    max-width: 350px;
    text-align: center;
    position: relative;
    top: 30px;
}

        .message {
            color: #ff4d4d;
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }

        button {
            background-color:#110185;
            color: #b7b3b3;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
            transition: background-color 0.3s ease;
            font-weight: 600;
        }

        button:hover {
            background-color: #110185;
        }

        a {
            display: block;
            text-align: center;
            text-decoration: none;
            color: #110185;
            margin-top: 10px;
            font-size: 14px;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #2409a1;
        }

        .password-field {
            position: relative;
        }

        .password-field i {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .logo-title {
    display: flex;
    align-items: center; /* Align logo and title vertically */
    justify-content: center; /* Center both horizontally */
    margin-bottom: 20px; /* Space below the title */
}

/* Logo inside the container */
.login-logo {
    width: 80px; /* Adjust the size of the logo */
    height: auto; /* Maintain aspect ratio */
    margin-right: 20px; /* Space between logo and title */
}

/* Title styling */
h1 {
    margin: 0; /* Remove default margin */
    color: #110185;
    font-weight: 600;
}


    </style>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="login-container ">
    
        <div class="logo-title">
            <img src="/assets/imgs/theme/icons/sportzzone1.png" alt="Logo" class="login-logo">
            <h1>Login</h1>
        </div>
    
        <!-- Form Section -->
        <form action="/login" method="POST">
            <input type="email" id="email" placeholder="Enter your email" name="email" 
            pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$" required title="Please Check your Email Address">
            <div class="password-field">
                <input type="password" id="password" placeholder="Enter your password" name="password" 
                pattern=".{8,}" required title="Please Check your Password">
                <i class="fa fa-eye" id="togglePassword"></i>
            </div>
            <a class="forget" href="/forgot-Password">Forgot password?</a>
            <a href="/register">New user? Register here</a>
            <button type="submit">Login</button>
        </form>
    
        <div class="divider">
            <span>OR</span>
        </div>
        <div class="social-login">
            <a href="/login/google" class="google-login">
                <!-- <img src="uploads/goog.jpg" alt="Google Icon" class="google-icon">  -->
                Login with Google
            </a>
        </div>
    </div>
    
    

    <% if (message && message.length > 0) { %>
        <script>
          Swal.fire({
            icon: 'warning',
            title: '<%= message %>',
            timer: 10000,
            timerProgressBar: true,
            didClose: () => {}
          });
        </script>
    <% } %>

    <% include('../layouts/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function (e) {
            // Toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            // Toggle the eye icon class
            this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>
