        window.onload = () => {
          console.log('inside');

          let res = document.getElementById("loginErrorMessage").innerText;
          if (res) {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: "Something went wrong!",
              timer:10000,
              footer: '<a href="#">You have entered wrong OTP</a>',
            });
          }
        };

      </script>
</html>
