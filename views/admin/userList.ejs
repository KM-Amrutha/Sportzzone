<%- include('../layouts/adminHeader.ejs') -%>

        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">user</h2>
                    <p>Those are your users..</p>
                </div>
            </div>
            <div class="card mb-4">
               
                <div class="card-body
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Statu</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% for(let i=0 ; i < user.length ; i++) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td>
                                                <div class="info">
                                                    <h6 class="mb-0"><%= user[i].name %></h6>
                                                </div>
                                            </td>
            
                                            <td class="col-price"><%= user[i].email %>
                                            </td>

                                            <td class="col-price"><%= user[i].mobile %>
                                            </td>

                                            <td class="col-status">
                                             <% if (user[i].is_Active) { %>
                                            
                                                <span class="badge rounded-pill alert-success">Active</span>
                                                  <% } else { %>
                                                <span class="badge rounded-pill alert-danger">Blocked</span>
                                                <% } %>
                                            </td>
            
                                            <td class="col-action text-end">
                                                <% if (user[i].is_Active) { %>
                                                    <a href="#" onclick="confirmBlock('<%= user[i]._id %>')" class="btn btn-sm btn-danger rounded" title="Block user">
                                                        <i class="material-icons md-block"></i> Block
                                                    </a>
                                                <% } else { %>
                                                    <a href="#" onclick="confirmUnBlock('<%= user[i]._id %>')" class="btn btn-sm btn-success rounded" title="Unblock user">
                                                        <i class="material-icons md-check_circle"></i> Unblock
                                                    </a>
                                                <% } %>
                                            </td>
                                            
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </tr>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive//end -->
                </div>
                <!-- card-body end// -->
            </div>


            <!-- pagination -->
            <div>
                <ul class="pagination">
                  <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="<%= currentPage === i ? 'active' : '' %>">
                      <a href="/admin/userList?page=<%= i %>"><%= i %></a>
                    </li>
                  <% } %>
                </ul>
              </div>
        </section>
         
        <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


    <script>
        function confirmBlock(userId) {
        console.log("confirmBlock called for userId: " + userId);
        Swal.fire({
        title: 'Confirm Block',
        text: "Do you really want to block this user?",
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#ff4500',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Block it!',
        cancelButtonText: 'Cancel',
        background: '#f4f6f9',
        color: '#333',
        iconColor: '#ff6347',
        backdrop: `
            rgba(50, 50, 50, 0.4)
            url("https://cdn.dribbble.com/users/1787323/screenshots/6103825/spinner.gif")
            center left
            no-repeat
        `,
        width: '500px',
        padding: '1.5rem',
        heightAuto: true,
        customClass: {
            popup: 'custom-swal-popup different-modal',
            loader: 'custom-swal-loader-alt',
        }
    }).then((result) => {
        if (result.isConfirmed) {
            console.log("Confirmed block for userId: " + userId);
            window.location.href = `/admin/ToggleblockUser?userid=${userId}`;
        }
    });
}

function confirmUnBlock(userId) {
    console.log("confirmUnBlock called for userId: " + userId);
    Swal.fire({
        title: 'Confirm Unblock',
        text: "Do you really want to unblock this user?",
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#32cd32',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Unblock it!',
        cancelButtonText: 'Keep it blocked',
        background: '#f4f6f9',
        color: '#333',
        iconColor: '#32cd32',
        backdrop: `
            rgba(50, 50, 50, 0.4)
            url("https://cdn.dribbble.com/users/1787323/screenshots/6103825/spinner.gif")
            center left
            no-repeat
        `,
        width: '500px',
        padding: '1.5rem',
        heightAuto: true,
        customClass: {
            popup: 'custom-swal-popup unblock-modal',
            loader: 'custom-swal-loader-alt',
        }
    }).then((result) => {
        if (result.isConfirmed) {
            console.log("Confirmed unblock for userId: " + userId);
            window.location.href = `/admin/ToggleblockUser?userid=${userId}`;
        }
    });
}

    </script>

    


    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/vendors/select2.min.js"></script>
    <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin-assets/js/main.js" type="text/javascript"></script>
</body>

